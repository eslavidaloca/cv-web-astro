---
import Layout from '@/layouts/Layout.astro';
// import { animate, stagger } from "motion"
import EnterMotion from "@/components/animations/EnterMotion";
---
<Layout>

	<div class="container max-w-xl md:max-w-4xl fontText p-4 mt-8">
		<div class="flex max-w-xl pb-10">
			<div class="flex items-center space-x-3">
				<!-- TODO: maybe this is wild but when you click it, a gif plays of me winking -->
				<button class="flex items-center transition md:justify-center md:hover:scale-105">
					<span class="relative inline-flex overflow-hidden rounded-full p-[2px]">
						<span id="animated-spin"></span>
						<div class="rounded-full cursor-pointer backdrop-blur-3xl">
							<EnterMotion client:only>
								<img class="rounded-full size-28" src="/me-rounded.jpeg" alt="Eslavi's face"/>
							</EnterMotion>
						</div>
					</span>
				</button>
				<div class="font-bold text-3xl 2xl:text-2xl">
					<span class="greeting"></span> My name is <span class="text-green-500">Eslavi</span>...
				</div>
			</div>
		</div>
		<div class="text-slate-dark-900 dark:text-mauve-900 text-xl 2xl:text-2xl text-wrap md:text-nowrap">
			and I hope you enjoy going through my page as I enjoyed the process of creating it
		</div>
		<div class="mt-8 w-5xl text-slate-dark-900 dark:text-mauve-900 text-xl 2xl:text-2xl text-wrap">
			+3 years of experience working as a Fullstack Developer. Bachelor's degree in Computer Science and living at Guadalajara, MÃ©xico.
			Love to play videogames, involve myself in new experiences and meeting all kind of people
		</div>

		<div class="mt-8 w-5xl text-slate-dark-900 dark:text-mauve-900 text-xl 2xl:text-2xl text-wrap">
			Are you in a hurry? You can <a class="text-green-500" href="/eslavi-cv-english.pdf" target="_blank">download my CV</a> as a PDF
		</div>
	</div>
</Layout>

<script is:inline>
	document.addEventListener('astro:page-load', () => {
		const greeting = document.querySelector('span.greeting');
		const hour = new Date().getHours();

		if (hour <= 12 && hour >= 6) {
			greeting.textContent = 'Good morning!';
		} else if (hour <= 17 && hour >= 13) {
			greeting.textContent = 'Good afternoon!';
		} else if (hour <= 21 && hour >= 18) {
			greeting.textContent = 'Good evening!';
		} else if (hour >= 22 || hour <= 5) {
			greeting.textContent = 'Good night!';
		}

		const animatedSpin = document.querySelector('#animated-spin');
		setTimeout(() => {
			animatedSpin.classList.add('animated-spin-slow');
		}, 800)
	});
</script>

<style>
	.fontText {
		font-family: 'Montserrat', 'Roboto', sans-serif;
	}
</style>