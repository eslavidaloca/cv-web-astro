---
import { Icon } from "astro-icon/components";

export interface Props {
    title: string;
    iconImg: string;
}

const { title, iconImg } = Astro.props;
---

<div class="inline-block space-y-4 carousel-card">
    <div class="flex flex-col items-center space-y-5">
        <div>
            <Icon name={iconImg} class="size-[100px] m-0 logo-image" />
        </div>
        <div class="font-bold text-sm md:text-md">
            {title}
        </div>
    </div>
</div>